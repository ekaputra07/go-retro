{
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.14",
    "esbuild": "0.25.1",
    "tailwindcss": "^4.0.14"
  },
  "scripts": {
    "build:js": "esbuild main.js --bundle --outdir=../public/assets --minify --sourcemap",
    "build:css": "npx @tailwindcss/cli -i ./main.css -o ../public/assets/main.css --minify",
    "build": "npm run build:js && npm run build:css"
  },
  "dependencies": {
    "@joeattardi/emoji-button": "^4.6.4",
    "alpinejs": "^3.14.9"
  }
}
